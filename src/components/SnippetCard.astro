---
interface Props {
  title: string;
  slug: string;
  resumen: string;
  categorias?: string[]; // Cambiado a opcional
  imagen_destacada?: string | null;
}

// Valores por defecto
const {
  title,
  slug,
  resumen,
  categorias = [], // Por defecto, un arreglo vac√≠o
  imagen_destacada = null, // Por defecto, null
} = Astro.props;
---

<li>
  <a
    href={`/snippets/${slug}`}
    class="not-prose group relative flex flex-nowrap rounded-lg border border-black/15 px-4 py-3 pr-10 transition-colors duration-300 ease-in-out hover:bg-gray-100 hover:text-black focus-visible:bg-black/5 focus-visible:text-black dark:border-white/20 dark:hover:bg-white/5 dark:hover:text-white dark:focus-visible:bg-white/5 dark:focus-visible:text-white"
  >
    <div class="flex flex-1 flex-col truncate gap-1">
      <h3 class="font-semibold max-w-xl truncate text-lg dark:text-white">
        {title}
      </h3>
      <p class="text-sm dark:text-gray-200 w-full truncate">
        {resumen}
      </p>
    </div>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      class="absolute right-2 top-1/2 size-5 -translate-y-1/2 fill-none stroke-current stroke-2"
    >
      <line
        x1="5"
        y1="12"
        x2="19"
        y2="12"
        class="translate-x-3 scale-x-0 transition-transform duration-300 ease-in-out group-hover:translate-x-0 group-hover:scale-x-100 group-focus-visible:translate-x-0 group-focus-visible:scale-x-100"
      ></line>
      <polyline
        points="12 5 19 12 12 19"
        class="-translate-x-1 transition-transform duration-300 ease-in-out group-hover:translate-x-0 group-focus-visible:translate-x-0"
      ></polyline>
    </svg>
    {
      categorias?.[0] && (
        <span class="absolute text-xs border rounded px-1.5 -top-2 bg-white dark:bg-slate-900 border-solid border-black/15 dark:border-white/20">
          {categorias[0]}
        </span>
      )
    }
  </a>
</li>
