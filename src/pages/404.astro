---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404: Page Not Found">
  <div class="min-h-[60vh] flex flex-col items-center justify-center text-center px-4">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">404: Page Not Found</h1>
    <p class="text-lg text-gray-600 mb-8">The page you're looking for doesn't exist or has been moved.</p>
    <a 
      href="/" 
      class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700"
    >
      Go back home
    </a>
  </div>
</Layout>