---
import Layout from "../../layouts/Layout.astro";
import { getCategories } from "../../lib/api";

const categories = await getCategories();
---

<Layout title="Categories - Code Snippets Blog">
  <section
    class="md:py-12 py-8 bg-slate-950 border-y border-solid border-black/15"
  >
    <div class="space-y-4" data-pagefind-ignore="">
      <h1 class="font-semibold md:text-4xl text-xl text-white text-center">
        Categor√≠as
      </h1>
    </div>
  </section>

  <section class="space-y-6 md:py-12 py-8">
    <div class="space-y-6">
      <div class="flex flex-wrap items-center justify-between gap-y-2">
        <h2 class="font-semibold md:text-2xl text-lg dark:text-white">
          Snippets
        </h2>
      </div>

      <ul class="not-prose grid md:grid-cols-2 gap-4">
        {
          categories.map((category) => (
            <a
              href={`/categories/${category}`}
              class="bg-white p-6 rounded-lg border border-solid hover:shadow-lg transition-shadow"
            >
              <h2 class="text-xl font-semibold text-gray-900">{category}</h2>
            </a>
          ))
        }
      </ul>
    </div>
  </section>
</Layout>
